{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
				 "esnext"
      ],
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
			"resolveJsonModule": true,
			"strict": true,
			"strictNullChecks": true,
			"strictPropertyInitialization": false,
			"paths": {
				"@application/*": ["./src/app/*"],
				"@infra/*": ["./src/infra/*"],
				"@test/*": ["./test/*"]
			}
   }
}
